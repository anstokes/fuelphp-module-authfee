<div class="row">
	<div class="col-lg-5 mx-auto">
		<div class="card">
			<div class="card-body p-0 auth-header-box">
				<div class="text-center p-3">
					<a href="/" class="logo logo-admin">
						<img src="{{app.logo}}" height="50" alt="{{app.title}}" class="auth-logo">
					</a>
					<h4 class="mt-3 mb-1 fw-semibold text-white font-18">Reset Password</h4>   
					<p class="text-muted  mb-0">Enter your email and instructions will be sent to you...</p>
				</div>
			</div>
			<div class="card-body pt-0">
				<form method="post" class="my-4">
					<div class="form-group mb-3">
						<label class="form-label" for="username">Email</label>
						<input type="text" class="form-control" id="userEmail" name="email" placeholder="Enter Email Address">                               
					</div><!--end form-group--> 

					<div class="form-group mb-0 row">
						<div class="col-12">
							<button class="btn btn-primary w-100" type="submit" name="operation" value="reset">Reset <i class="fas fa-sign-in-alt ms-1"></i></button>
						</div><!--end col--> 
					</div> <!--end form-group-->                           
				</form><!--end form-->
				<div class="text-center text-muted">
					<p class="mb-1">Remembered it?  <a href="login" class="text-primary ms-2">Sign in here</a></p>
				</div>
			</div><!--end card-body-->
			<div class="card-body bg-light-alt text-center">
				{{{ app.copyright }}}
			</div>
		</div><!--end card-->
	</div><!--end col-->
</div><!--end row-->